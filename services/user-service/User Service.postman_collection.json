          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:4001/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4001",
          "path": ["api", "auth", "login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save token in Postman Environment",
              "var json = pm.response.json();",
              "pm.environment.set('token', json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
